# Flask 核心配置
FLASK_ENV=production  # 环境类型：development/production
SECRET_KEY=your_secure_random_key_here  # 生产环境必须更换为随机密钥

# 数据库配置
DATABASE_URI=sqlite:///site.db  # SQLite配置
# 若使用MySQL：DATABASE_URI=mysql+pymysql://user:password@localhost:3306/douyin_ai

# 第三方API密钥
DEEPSEEK_API_KEY=your_deepseek_api_key  # DeepSeek AI密钥
DEEPSEEK_API_URL=https://api.deepseek.com/v1/chat/completions
DEEPSEEK_MODEL=deepseek-chat

BAIDU_APP_ID=your_baidu_app_id          # 百度语音APP ID
BAIDU_API_KEY=your_baidu_api_key        # 百度语音API Key
BAIDU_SECRET_KEY=your_baidu_secret_key  # 百度语音Secret Key

# 系统行为配置
LOG_LEVEL=INFO               # 日志级别：DEBUG/INFO/WARNING/ERROR
LOG_FILE=app.log             # 日志文件路径
MAX_COMMENT_HISTORY=1000     # 最大评论缓存数
AI_REPLY_TIMEOUT=10          # AI回复超时时间（秒）